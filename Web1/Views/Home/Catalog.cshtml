@using Web1.Models
@model List<ProductModel>
@{
    List<ProductModel> grozs = new List<ProductModel>();
    if (Session["preces"] != null)
    {
        grozs = Session["Preces"] as List<ProductModel>;
    }
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
 
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;

    }

    tr:hover {
        background-color: #f5f5f5;
    }
    h1 {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

    body {
        background-color:aquamarine;
    }

</style>

<body>
    @if (grozs.Count > 0)
    {
        <h1>Grozs</h1>

        <table>
            <tr>
                <th>Nosaukums</th>
                <th>Cena</th>

            </tr>
            @foreach (ProductModel prece in grozs)
            {
                <tr>
                    <td>@prece.ProductName</td>
                    <td>@(prece.Price.Currency) @(prece.Price.Amount)</td>

                </tr>
            }
        </table>
    }


    <h1>Preču katalogs</h1>

    <table>
        <tr>
            <th>Nosaukums</th>
            <th>Cena</th>
            <th></th>
        </tr>
        @foreach (ProductModel prece in Model)
        {
            <tr>
                <td>@prece.ProductName</td>
                <td>@(prece.Price.Currency) @(prece.Price.Amount)</td>
                <td><a href="@Url.Action("Buy", "Home", new { name = prece.ProductName })">Pirkt</a></td>
            </tr>
        }
    </table>
</body>